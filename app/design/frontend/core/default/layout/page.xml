<layout version="0.1.0">
    <!--
    Default layout, loads most of the pages
    -->

    <default>

        <!--The skeleton will also serve as the location of the file as well...-->
        <page skeleton="page/1column.phtml"/>

        <block name="head">
            <action method="addBootstrap"/>

            <!--<action method="addCss">-->
                <!--<stylesheet>-->
                    <!---->
                <!--</stylesheet>-->
            <!--</action>-->
            <action method="addTemplate">head.phtml</action>

            <!--<action method="addCss"> location of css  </action>-->
            <!--<action method="addJs"> location of js  </action>-->
        </block>


        <block name="header">

            <action method="addTemplate">header.phtml</action>

        </block>


        <block name="body">

            <action method="addTemplate">body.phtml</action>

        </block>


        <block name="footer">

            <action method="addTemplate">footer.phtml</action>

        </block>

    </default>



    <!-- Custom page layout handles -->

    <page_one_column skeleton="page/1column.phtml">

